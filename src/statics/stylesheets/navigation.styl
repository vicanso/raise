@import 'nib'
@import './common'
#navigation
  height $NAVIGATION_HEIGHT
  background-color #f0f0f0
  position absolute
  left 0
  right 0
  bottom 0
  box-shadow 0 -1px 1px #d0d0d0
  .item
    display inline-block
    width 33.33%
    text-align center
    color #0f0f0f
    line-height $NAVIGATION_HEIGHT - 5
    padding-bottom 5px
    &:active
      background-color #e0e0e0
    &.active
      color $PINKY_COLOR
    &.cart
      background-size 25px
      background-position top center