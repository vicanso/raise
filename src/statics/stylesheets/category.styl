#header
  height $HEADER_HEIGHT
  line-height @height
  background-color $PINKY_COLOR
  font-size 20px
  color #fff
  text-align center
#contentContainer
  position absolute
  top 0
  left 0
  right 0
  bottom $NAVIGATION_HEIGHT
  padding-bottom 10px
  overflow hidden
  .searchContainer
    padding 5px 10px
    background-color #fff
    box-shadow 1px 1px 1px #a0a0a0
    .clear
      float right
      color $PINKY_COLOR
      line-height 28px
      width 35px
      display block
      text-align center
      &.hidden
        display none
    .search
      padding 0
      display block
      width 100%
      text-indent 30px
      height 25px
      margin-left -1px
      outline none
      background-image url(../icons/search.png)
      background-position 10px center
      background-repeat no-repeat
      background-color #f1f1f1
      border 1px solid #d0d0d0
      border-radius 30px
      &:focus
        background-image url(../icons/search_pinky.png)

  categorySelectContainerCss()
