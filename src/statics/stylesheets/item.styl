@import 'nib'
@import './common'

itemContainerCss()
  .itemContainer
    .buy
      display block
      padding 0 5px
      img
        display block
        width 100%
    .desc
      margin 0 3px
    .price
      margin-top -22px
      right 17px
recommmendsContainerCss()
  .recommmendsContainer
    h3
      margin 5px 3px
      padding 0
      line-height 20px
      padding-top 5px
      border-top 1px solid #ddd
      color #ff6191
    .recommmends
      padding 0
      margin 0
      .item
        float left
        position relative
        width 33.33%
        .anchor
          display block
          margin 2px 4px
        img
          width 100%
          border 2px solid #fff
          display block
        .price
          bottom 4px
          right 3px


#contentContainer
  position absolute
  top 0
  left 0
  right -10px
  padding-right 10px
  bottom $NAVIGATION_HEIGHT
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch
  itemContainerCss()
  recommmendsContainerCss()
  .price
    background-color rgba(0, 0, 0, 0.5)
    border-radius 3px
    position absolute
    color #ff6191
